<div class="card mb-3 position-relative" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="<%= recipe.image_url %>" class="card-img" style="max-width: 100%;　max-height: 100%;">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= recipe.name %></h5>
        <p class="card-text"><%= recipe.description %></p>
        <p class="card-text"><small><%= recipe.calculate_total(:kcal).round %> kcal</small></p>
        <p class="card-text">
          <small>
            炭水化物 <%= recipe.calculate_total(:carbohydrate).round %> g,
            たんぱく質 <%= recipe.calculate_total(:protein).round %> g,
            脂質 <%= recipe.calculate_total(:fat).round %> g
          </small>
        </p>
        <p class="card-text"><small class="text-muted">by <%= recipe.user.name %></small></p>
        <% if edit == true %>
          <button
            type="button"
            class="btn btn-info btn-lg rounded-circle position-absolute day-kondate-recipe-add-btn"
            style="bottom: 15px; right: 15px;"
            data-id="<%= recipe.id %>"
            data-name="<%= recipe.name %>"
            data-kcal="<%= recipe.calculate_total(:kcal) %>"
            data-protein="<%= recipe.calculate_total(:protein) %>"
            data-carbs="<%= recipe.calculate_total(:carbohydrate) %>"
            data-fat="<%= recipe.calculate_total(:fat) %>"
          >+</button>
        <% end %>
      </div>
    </div>
  </div>
</div>